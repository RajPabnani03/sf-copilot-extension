{
  "manifest_version": 3,
  "name": "Salesforce Copilot",
  "version": "1.0",
  "description": "GitHub Copilot integration for Salesforce Developer Console",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.salesforce.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://*.salesforce.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
